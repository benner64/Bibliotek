{% set currentPath = path(app.request.attributes.get('_route'),
                       app.request.attributes.get('_route_params')) %}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
		<script src="/js/bootstrap.min.js"></script>
		{% block stylesheets %}{% endblock %}

		{% block javascripts %}{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">

        <!-- The first Big word in the nav bar -->
				<a class="navbar-brand" href="/">Bibliotek</a>

        <!-- The button appearing when the page gets too small -->
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>


				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">

            <!-- ______________________________NavItems_________________________________  -->

						<li class="nav-item">
							<a class="nav-link 
              {% if 'Book' in currentPath  %}
                active
              {% endif %}
              " href="/Book">Books</a>
						</li>

						<li class="nav-item">
							<a class="nav-link 
              {% if 'Author' in currentPath  %}
                active
              {% endif %}
              " href="/Author">Authors</a>
						</li>

            <li class="nav-item">
							<a class="nav-link 
              {% if 'Publisher' in currentPath  %}
                active
              {% endif %}
              " href="/Publisher">Publishers</a>
						</li>

            <li class="nav-item">
							<a class="nav-link 
              {% if 'Genre' in currentPath  %}
                active
              {% endif %}
              " href="/Genre">Genres</a>
						</li>

            <li class="nav-item">
							<a class="nav-link 
              {% if 'Series' in currentPath  %}
                active
              {% endif %}
              " href="/Series">Series</a>
						</li>

            <!-- ______________________________NavItemsEnd_________________________________  -->
					</ul>
				</div>
			</div>
		</nav>

		<div class="container-fluid mb-3">
			{% block Content %}
			
			{% endblock %}
		</div>

	</body>
</html>
